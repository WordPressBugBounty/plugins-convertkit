{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 1,
    "name": "convertkit/form-builder-field-name",
    "title": "Kit Form Builder: Name Field",
    "category": "kit",
    "description": "Adds a name field to the Kit Form Builder.",
    "keywords": [
        "convertkit",
        "kit",
        "name",
        "field"
    ],
    "textdomain": "convertkit",
    "parent": [ "convertkit/form-builder" ],
    "attributes": {
        "label": {
            "type": "string"
        },
        "fontSize": {
            "type": "string"
        },
        "style": {
            "type": "object"
        },
        "backgroundColor": {
            "type": "string"
        },
        "textColor": {
            "type": "string"
        },
        "is_gutenberg_example": {
            "type": "boolean",
            "default": false
        }
    },
    "supports": {
        "align": true,
        "className": true,
        "color": {
            "background": true,
            "text": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "editorScript": "convertkit-gutenberg"
}